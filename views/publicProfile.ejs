<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= username %>'s Profile | New Tracks</title>
    <link rel="stylesheet" href="https://noahscholfield.com/css/bootstrap-yeti.min.css">
  </head>
  <body>
    <%- include('../views/partials/navbar.ejs', {user: user}) %>
    <div class="jumbotron">
      <div class="container">
        <h1><%= username %>'s Tracks</h1>
      </div>
    </div>
    <div class="container">
      <% if(user.username === username) { %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        This is what your profile will look like to other users if your profile is pubilc.
      </div>
      <% } %>
      <table class="table">
        <tr>
          <th>Track Name</th>
          <th>Artist</th>
        </tr>
        <% tracks.forEach(function(track) { %>
          <tr>
            <td><a class="btn-link" href="../#!/<%= track.trackID %>" target="_blank"><%= track.title %></a></td>
            <td><%= track.artist %></td>
          </tr>
        <% }); %>
      </table>
      <a onclick="$('#json').toggleClass('hidden')">Toggle JSON</a>
      <div class="hidden" id="json">
        <pre><code><%= JSON.stringify(tracks, undefined, 2) %></code></pre>
      </div>
    </div>
    <% include ../views/partials/scripts.ejs %>
  </body>
</html>
